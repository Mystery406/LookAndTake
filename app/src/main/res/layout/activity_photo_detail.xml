<?xml version="1.0" encoding="utf-8"?>
<com.l.lookandtake.widget.ParallaxScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_parallax"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:transitionName="@string/transition_photo" />

        <include layout="@layout/layout_photo_detail" />

    </LinearLayout>
</com.l.lookandtake.widget.ParallaxScrollView>